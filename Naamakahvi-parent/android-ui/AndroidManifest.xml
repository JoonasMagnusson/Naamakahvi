<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="naamakahvi.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="14"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/facecafe"
        android:label="@string/app_name" android:theme="@android:style/Theme.Holo.NoActionBar" android:debuggable="false">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConfirmActivity" android:screenOrientation="landscape">
        </activity>
        <activity android:name="naamakahvi.android.MenuActivity" android:screenOrientation="landscape"></activity>
        <activity android:name="naamakahvi.android.NewUserActivity" android:screenOrientation="landscape" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name="naamakahvi.android.LoginwithusernameActivity" android:screenOrientation="landscape"></activity>
        <activity android:name="naamakahvi.android.ConfirmPurchaseActivity" android:screenOrientation="landscape"></activity>
        <activity android:name="RecogActivity" android:screenOrientation="landscape"></activity>
        <activity android:screenOrientation="landscape" android:windowSoftInputMode="adjustPan" android:name="UserSettingsActivity"></activity>
    </application>

</manifest>